<?xml version="1.0" encoding="UTF-8"?>

<!-- MODAL DEFAULT WIZARD FORM FOR FORM EDITOR -->

<templates xml:space="preserve">
	<t t-name="website.form.editor.wizard.template">
		<div class="modal fade">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal">
							<span aria-hidden="true">&amp;times;</span>
							<span class="sr-only">Close</span>
						</button>
						<h4 class="modal-title">Add a New Field</h4>
					</div>
					<div class="modal-body">
						<form class="form-horizontal" role="form">
							<div class="form-group">
								<label for="formFieldEditor-select-action" class="col-md-3 col-sm-4 control-label">Field :</label>
								<div class="col-md-9 col-sm-8">
									<select class="form-control form-select-field" id="formFieldEditor-select-action">
										<option value="custom">Custom</option>
									</select>
								</div>
							</div>
							<div class="form-group">
								<label for="formFieldEditor-label" class="col-md-3 col-sm-4 control-label">Label :</label>
								<div class="col-md-9 col-sm-8">
									<input type="text" class="form-control form-field-label" id="formFieldEditor-label" />
								</div>
							</div>
							<t t-raw="subTemplate" />
							<div class="form-group">
								<label for="formFieldEditor-help" class="col-md-3 col-sm-4 control-label">Help :</label>
								<div class="col-md-9 col-sm-8">
									<div class="input-group">
										<span class="input-group-addon">
											<input type="checkbox"  class="form-field-helped" id="formFieldEditor-helped" />
										</span>
										<input type="text" class="form-control form-field-help" id="formFieldEditor-help" />
									</div>
								</div>
							</div>
							<div class="form-group">
								<label for="formFieldEditor-required" class="col-md-3 col-sm-4 control-label">Required :</label>
								<div class="col-md-9 col-sm-8">
									<input type="checkbox" class="form-field-required" id="formFieldEditor-required" />
								</div>
							</div>
						</form>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-primary validate">Continue</button>
						<button type="button" class="btn cancel" data-dismiss="modal" aria-hidden="true">Cancel</button>
					</div>
				</div>
			</div>
		</div>
	</t>

	<!-- MODAL INPUT WIZARD ADD-ON FORM FOR FORM EDITOR -->
	<t t-name="website.form.editor.wizard.template.input">
			<div>
				
				<div class="form-group">
					<label for="formFieldEditor-placeholder" class="col-md-3 col-sm-4 control-label">Placeholder :</label>
					<div class="col-md-9 col-sm-8">
						<input type="text" class="form-control form-field-placeholder" id="formFieldEditor-placeholder" />
					</div>
				</div>
				
				<div class="form-group">
					<label for="formFieldEditor-ap-pre-pend" class="col-md-3 col-sm-4 control-label">Constants :</label>
					<div class="col-md-9 col-sm-8">
						<div class="input-group">
							<span class="input-group-addon">
								<input type="checkbox"  class="form-field-prepend-check" id="formFieldEditor-prepend-check" />
								<input type="text"  class="form-field-prepend" id="formFieldEditor-prepend" />
							</span>
							<span class="input-group-addon">
								<input type="text"  class="form-field-append" id="formFieldEditor-append" />
								<input type="checkbox"  class="form-field-append-check" id="formFieldEditor-append-check" />
							</span>
						</div>
					</div>
				</div>
				
			</div>
		</t>
	
	<!-- MODAL TEXTAREA WIZARD ADD-ON FORM FOR FORM EDITOR -->
	<t t-name="website.form.editor.wizard.template.textarea">
		<div>
			<div class="form-group">
				<label for="formFieldEditor-placeholder" class="col-md-3 col-sm-4 control-label">Placeholder :</label>
				<div class="col-md-9 col-sm-8">
					<input type="text" class="form-control form-field-placeholder" id="formFieldEditor-placeholder" />
				</div>
			</div>
		</div>
	</t>
	
	<!-- MODAL CHECKBOX WIZARD ADD-ON FORM FOR FORM EDITOR -->
	<t t-name="website.form.editor.wizard.template.checkbox">
		<div>
			<div class="form-group">
				<label for="formFieldEditor-option" class="col-md-3 col-sm-4 control-label">Option :</label>
				<div class="col-md-9 col-sm-8">
					<input type="text" class="form-control form-field-option" id="formFieldEditor-option" />
				</div>
			</div>			
		</div>
	</t>
	
		<!-- MODAL MULTI-CHECKBOX WIZARD ADD-ON FORM FOR FORM EDITOR -->
	<t t-name="website.form.editor.wizard.template.multiCheckbox">
		<div>
			<div class="form-group">
				<label for="formFieldEditor-option" class="col-md-3 col-sm-4 control-label">Options :</label>
				<div class="col-md-9 col-sm-8 form-editor-table">
					<table class="table table-condensed">
						<tr>
							<th>Option</th>
							<th>Value</th>
							<th class="tb-actions"></th>
						</tr>
						<tr class="last">
							<td contenteditable="true" class="option-label">New Option Label</td>
							<td contenteditable="true" class="option-value">New Option Value</td>
							<td><input type="button" class="btn btn-default form-editor-add" value="+" /></td>
						</tr>
					</table>
				</div>	
			</div>
			<div class="form-group">
				<label for="formFieldEditor-inline" class="col-md-3 col-sm-4 control-label">Inline :</label>
				<div class="col-md-9 col-sm-8">
					<input type="checkbox" class="form-field-inline" id="formFieldEditor-inline" />
				</div>
			</div>
		</div>
	</t>
	
	<!-- MODAL MULTI-CHECKBOX WIZARD ADD-ON FORM FOR FORM EDITOR -->
	<t t-name="website.form.editor.wizard.template.radio">
		<div>
			<div class="form-group">
				<label for="formFieldEditor-option" class="col-md-3 col-sm-4 control-label">Options :</label>
				<div class="col-md-9 col-sm-8 form-editor-table">
					<table class="table table-condensed">
						<tr>
							<th>Option</th>
							<th>Value</th>
							<th class="tb-actions"></th>
						</tr>
						<tr class="last">
							<td contenteditable="true" class="option-label">New Option Label</td>
							<td contenteditable="true" class="option-value">New Option Value</td>
							<td><input type="button" class="btn btn-default form-editor-add" value="+" /></td>
						</tr>
					</table>
				</div>	
			</div>
			<div class="form-group">
				<label for="formFieldEditor-inline" class="col-md-3 col-sm-4 control-label">Inline :</label>
				<div class="col-md-9 col-sm-8">
					<input type="checkbox" class="form-field-inline" id="formFieldEditor-inline" />
				</div>
			</div>
		</div>
	</t>	
	<!-- MODAL SELECT WIZARD ADD-ON FORM FOR FORM EDITOR -->
	<t t-name="website.form.editor.wizard.template.select">
		<div>
			<div class="form-group">
				<label for="formFieldEditor-option" class="col-md-3 col-sm-4 control-label">Options :</label>
				<div class="col-md-9 col-sm-8 form-editor-table">
					<table class="table table-condensed">
						<tr>
							<th>Option</th>
							<th>Value</th>
							<th class="tb-actions"></th>
						</tr>
						<tr class="last">
							<td contenteditable="true" class="option-label">New Option Label</td>
							<td contenteditable="true" class="option-value">New Option Value</td>
							<td>
								<input type="button" class="btn btn-default form-editor-add" value="+" />
							</td>
						</tr>
					</table>
				</div>
			</div>
			<div class="form-group">
				<label for="formFieldEditor-multiple" class="col-md-3 col-sm-4 control-label">Multiple :</label>
				<div class="col-md-9 col-sm-8">
					<input type="checkbox" class="form-field-multiple" id="formFieldEditor-multiple" />
				</div>
			</div>
		</div>
	</t>
	
	<!-- OPTION TEMPLATE FOR CHECKBOX -->
	<t t-name="website.form.editor.template.option.checkbox">
		<div>
			<div class="checkbox">
				<label t-att-for="id">
					<input type="checkbox" t-att-id="id" t-att-name="id" t-att-value="value" />
					<span class="option"><t t-raw="label" /></span>
				</label>
			</div>
		</div>
	</t>
	<!-- OPTION TEMPLATE FOR CHECKBOX -->
	<t t-name="website.form.editor.template.option.radio">
		<div>
			<div class="radio">
				<label t-att-for="id">
					<input type="radio" t-att-id="id" t-att-name="id" t-att-value="value" />
					<span class="option"><t t-raw="label" /></span>
				</label>
			</div>
		</div>
	</t>
		
		<!-- OPTION TEMPLATE FOR SELECT -->
	<t t-name="website.form.editor.template.option.select">
			<option t-att-value="value"><t t-raw="label" /></option>
	</t>		

	

</templates>