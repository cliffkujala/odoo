<?xml version="1.0" encoding="UTF-8"?>

<templates>
    <t t-name="footNoteTextarea">
        <div class="row mt32 mb32">
            <label t-att-for="'footnote' + footNoteSeqNum"><t t-esc="footNoteSeqNum"/></label>
            <textarea t-att-name="'footnote' + footNoteSeqNum" rows='4' class="form-control">Insert foot note here</textarea>
            <button class="btn btn-primary saveFootNote">Save</button>
        </div>
    </t>
    <t t-name="supFootNoteSeqNum">
         <sup><t t-esc="footNoteSeqNum"/></sup>
    </t>
    <t t-name="savedFootNote">
        <div class="row mt32 mb32"><t t-esc="num+'. '+note"/></div>
    </t>
    <t t-name="foldable">
        <span t-att-class="'foldable '+lineId">&gt;</span>
    </t>
    <t t-name="unfoldable">
        <span t-att-class="'unfoldable '+lineId">^</span>
    </t>
    <t t-name="report_financial_line">
        <tr>
            <t t-if="l.level &gt; 3"><t t-set="style" t-value="'font-weight: normal;'"/></t>
            <t t-if="l.level &lt;= 3 "><t t-set="style" t-value="'font-weight: bold;'"/></t>

            <td>
                <t t-if="l.type == 'line' and l.unfolded">
                    <span t-att-class="'foldable '+l.id">&gt;</span>
                </t>
                <t t-if="l.type == 'line' and !l.unfolded">
                    <span t-att-class="'unfoldable '+l.id">^</span>
                </t>
                <span class="level" style="color: white;"><t t-esc="Array(l.level + 1).join('..')" /></span>
                <t t-if="l.id and l.action and l.action !== 'unclickable'">
                    <span t-att-style="style" t-att-class="l.action + ' ' + l.id"><t t-esc="l.name"/></span>
                </t>
                <t t-if="!l.id or !l.action or l.action == 'unclickable'">
                    <span t-att-style="style"><t t-esc="l.name"/></span>
                </t>
            </td>
            <td class="text-right" style="white-space: nowrap;" t-if="o.debit_credit">
                <span class="annotable" t-att-style="style"><t t-esc="l.debit"/></span>
            </td>
            <td class="text-right" style="white-space: nowrap;" t-if="o.debit_credit">
                <span class="annotable" t-att-style="style"><t t-esc="l.credit"/></span>
            </td>
            <td class="text-right" style="white-space: nowrap;" t-if="o.balance">
                <span class="annotable" t-att-style="style"><t t-esc="l.balance"/></span>
            </td>
            <td class="text-right" style="white-space: nowrap;" t-if="c.comparison">
                <span class="annotable" t-att-style="style"><t t-esc="l.balance_cmp"/></span>
            </td>
        </tr>
    </t>
</templates>
