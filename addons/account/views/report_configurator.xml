<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_configurator">
    <h3>Configurator</h3>
    <form role="form" method="get" name="form">
        <div class="form-group">
            <div class="row mt32">
                <div class="col-xs-3">
                    <t t-if="context.multi_company">
                        <label for="company_id">Company :</label>
                        <select name="company_id" class="form-control">
                            <t t-foreach="context.get_companies()" t-as="c"> 
                                <option t-if="c == context.company_id" selected="selected" t-att-value="c.id">
                                    <t t-esc="c.name"></t>
                                </option>
                                <option t-if="c != context.company_id" t-att-value="c.id">
                                    <t t-esc="c.name"></t>
                                </option>
                            </t>   
                        </select>
                    </t>
                </div>
                <div class="col-xs-3">
                    <label for="target_move">Target move :</label>
                    <select name="target_move" class="form-control">
                        <t t-if="context.target_move == 'posted'">
                            <option selected="selected" value="posted">All Posted Entries</option>
                            <option value="all">All Entries</option>
                        </t>
                        <t t-if="context.target_move != 'posted'">
                            <option value="posted">All Posted Entries</option>
                            <option selected="selected" value="all">All Entries</option>
                        </t>
                    </select>
                    <div class="checkbox">
                        <label> 
                            <input t-if="context.comparison == False" type="checkbox" name="comparison" value="True" />
                            <input t-if="context.comparison == True" type="checkbox" name="comparison" value="True" checked="checked" />
                            Enable Comparison
                        </label>
                    </div>
                    <div class="checkbox" t-if="o.debit_credit">
                        <label> 
                            <input t-if="context.cash_basis == False" type="checkbox" name="cash_basis" value="True" />
                            <input t-if="context.cash_basis == True" type="checkbox" name="cash_basis" value="True" checked="checked" />
                            Enable Cash Basis Method
                        </label>
                    </div>
                </div>
                <div class="col-xs-3">
                    <label for="date_from">Start Date :</label>
                    <input type="date" class="form-control" name="date_from" t-att-value="context.date_from"></input>
                    <label for="date_to">End Date :</label>
                    <input type="date" class="form-control" name="date_to" t-att-value="context.date_to"></input>
                </div>
                <div t-if="context.comparison" class="col-xs-3">
                    <label for="date_from_cmp">Start Date :</label>
                    <input type="date" class="form-control" name="date_from_cmp" t-att-value="context.date_from_cmp"></input>
                    <label for="date_to_cmp">End Date :</label>
                    <input type="date" class="form-control" name="date_to_cmp" t-att-value="context.date_to_cmp"></input>
                </div>
            </div>
            <div class="mt32">
                <input type="submit" class="btn btn-primary" value="Update" />
                <input type="submit" name="print" class="btn btn-primary" value="CSV" />
            </div>
        </div>
    </form>
