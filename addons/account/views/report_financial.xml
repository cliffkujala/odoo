<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<record id="action_account_financial_context" model="ir.actions.act_window">
    <field name="name">Financial Reports Configurations</field>
    <field name="res_model">account.financial.report.context</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
</record>
<menuitem id="menu_action_account_financial_context" name="Profit And Loss" action="action_account_financial_context" parent="account.menu_finance_legal_statement"/>
<menuitem id="menu_action_account_financial_context" name="Balance Sheet" action="action_account_financial_context" parent="account.menu_finance_legal_statement"/>

<template id="report_financial_line">
    <tr>
        <t t-if="a.get('level') &gt; 3"><t t-set="style" t-value="'font-weight: normal;'"/></t>
        <t t-if="not a.get('level') &gt; 3"><t t-set="style" t-value="'font-weight: bold;'"/></t>

        <td>
            <t t-if="a.get('type') == 'line' and a.get('unfolded')">
                <span t-att-class="' '.join(['foldable', str(a.get('id'))])">&gt;</span>
            </t>
            <t t-if="a.get('type') == 'line' and not a.get('unfolded')">
                <span t-att-class="' '.join(['unfoldable', str(a.get('id'))])">^</span>
            </t>
            <span class="level" style="color: white;" t-esc="'..' * a.get('level', 0)"/>
            <t t-if="a.get('id') and a.get('action') and a['action'] != 'unclickable'">
                <span t-att-style="style" t-att-class="' '.join([a['action'], str(a['id'])])" t-esc="a.get('name')"/>
            </t>
            <t t-if="not a.get('id') or not a.get('action') or a.get('action') == 'unclickable'">
                <span t-att-style="style" t-esc="a.get('name')"/>
            </t>
        </td>
        <td class="text-right" style="white-space: nowrap;" t-if="o.debit_credit">
            <span class="annotable" t-att-style="style" t-esc="a.get('debit')"/> <!-- TODO : FormatLang -->
        </td>
        <td class="text-right" style="white-space: nowrap;" t-if="o.debit_credit">
            <span class="annotable" t-att-style="style" t-esc="a.get('credit')"/>
        </td>
        <td class="text-right" style="white-space: nowrap;" t-if="o.balance">
            <span class="annotable" t-att-style="style" t-esc="a.get('balance')"/>
        </td>
        <!-- <td class="text-right" style="white-space: nowrap;" t-if="o.comparison">
            <span class="annotable" t-att-style="style" t-esc="formatLang(a.get('balance_cmp'), currency_obj=res_company.currency_id)"/>
        </td> -->
    </tr>
</template>
<template id="report_financial">
    <t t-call="report.html_container">
        <span class="oe_account_report_widgets">
            <t t-call="account.report_configurator"/>
            <t t-call-assets="web.assets_common" t-css="false" />
            <t t-call-assets="web.assets_backend" t-css="false" />
            <script type="text/javascript" src="/account/static/src/js/account_report_widgets.js"></script>
            <div t-att-class="' '.join(['page', 'oe_account_report_widgets', str(context.id)])">
                <h2 t-esc="o.name"/>
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th class="text-right" t-if="o.debit_credit">Debit</th>
                            <th class="text-right" t-if="o.debit_credit">Credit</th>
                            <th class="text-right" t-if="o.balance">Balance</th>
                            <!-- <th class="text-right" t-if="o.comparison">Comparison</th> -->
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="lines" t-as="a">
                            <t t-call="account.report_financial_line" />
                        </t>
                    </tbody>
                </table>
            </div>
        </span>
    </t>
</template>
</data>
</openerp>
