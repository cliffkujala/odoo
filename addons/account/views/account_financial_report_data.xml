<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!--
            Lines
        -->

        <!-- CASH SUMMARY -->

        <record id="account_financial_report_cashsummary_line0" model="account.financial.report.line">
            <field name="name">CASH SUMMARY</field>
            <field name="formulas">balance = INC.balance - LEX.balance; credit = INC.credit - LEX.credit; debit = INC.debit - LEX.debit</field>
            <field name="sequence" eval="4"/>
        </record>


        <!-- PROFIT AND LOSS -->


        <record id="account_financial_report_net_profit0" model="account.financial.report.line">
            <field name="name">NET PROFIT</field>
            <field name="code">NEP</field>
            <field name="formulas">balance = GRP.balance - LEX.balance; debit = GRP.debit - LEX.debit; credit = GRP.credit - LEX.credit</field>
            <field name="sequence" eval="2"/>
        </record>

        <record id="account_financial_report_gross_profit0" model="account.financial.report.line">
            <field name="name">GROSS PROFIT</field>
            <field name="code">GRP</field>
            <field name="formulas">balance = INC.balance - COS.balance; debit = INC.debit - COS.debit; credit = INC.credit - COS.credit</field>
            <field name="parent_ids" eval="[(6, 0, [ref('account_financial_report_net_profit0')])]"/>
            <field name="sequence" eval="2"/>
        </record>

        <record id="account_financial_report_income0" model="account.financial.report.line">
            <field name="name">Income</field>
            <field name="code">INC</field>
            <field name="formulas">balance = REV.balance + SAL.balance; debit = REV.debit + SAL.debit; credit = REV.credit + SAL.credit</field>
            <field name="parent_ids" eval="[(4, ref('account_financial_report_gross_profit0')), (4, ref('account_financial_report_cashsummary_line0'))]"/>
            <field name="sequence" eval="2"/>
        </record>
        <record id="account_financial_report_revenue0" model="account.financial.report.line">
            <field name="name">Revenue</field>
            <field name="code">REV</field>
            <field name="formulas">balance = sum.balance; credit = sum.credit; debit = sum.debit</field>
            <field name="parent_ids" eval="[(6, 0, [ref('account_financial_report_income0')])]"/>
            <field name="domain" eval="[('account_id.user_type.report_type', '=', 'revenue')]" />
            <field name="groupby">account_id</field>
            <field name="sequence" eval="2"/>
        </record>
        <record id="account_financial_report_sales0" model="account.financial.report.line">
            <field name="name">Sales</field>
            <field name="code">SAL</field>
            <field name="formulas">balance = sum.balance; credit = sum.credit; debit = sum.debit</field>
            <field name="parent_ids" eval="[(6, 0, [ref('account_financial_report_income0')])]"/>
            <field name="domain" eval="[('account_id.user_type.report_type', '=', 'sales')]" />
            <field name="groupby">account_id</field>
            <field name="sequence" eval="2"/>
        </record>

        <record id="account_financial_report_cost_sales0" model="account.financial.report.line">
            <field name="name">Less Cost of Sales</field>
            <field name="code">COS</field>
            <field name="formulas">balance = DCO.balance; credit = DCO.credit; debit = DCO.debit</field>
            <field name="parent_ids" eval="[(6, 0, [ref('account_financial_report_gross_profit0')])]"/>
            <field name="sequence" eval="2"/>
        </record>
        <record id="account_financial_report_direct_costs0" model="account.financial.report.line">
            <field name="name">Direct Costs</field>
            <field name="code">DCO</field>
            <field name="formulas">balance = sum.balance; credit = sum.credit; debit = sum.debit</field>
            <field name="parent_ids" eval="[(6, 0, [ref('account_financial_report_cost_sales0')])]"/>
            <field name="domain" eval="[('account_id.user_type.report_type', '=', 'direct_costs')]" />
            <field name="groupby">account_id</field>
            <field name="sequence" eval="2"/>
        </record>

        <record id="account_financial_report_less_expenses0" model="account.financial.report.line">
            <field name="name">Less Expenses</field>
            <field name="code">LEX</field>
            <field name="formulas">balance = EXP.balance + DEP.balance + OVH.balance; credit = EXP.credit + DEP.credit + OVH.credit; debit = EXP.debit + DEP.debit + OVH.credit</field>
            <field name="parent_ids" eval="[(4, ref('account_financial_report_net_profit0')), (4, ref('account_financial_report_cashsummary_line0'))]"/>
            <field name="sequence" eval="2"/>
        </record>
        <record id="account_financial_report_expense0" model="account.financial.report.line">
            <field name="name">Expenses</field>
            <field name="code">EXP</field>
            <field name="formulas">balance = sum.balance; credit = sum.credit; debit = sum.debit</field>
            <field name="parent_ids" eval="[(6, 0, [ref('account_financial_report_less_expenses0')])]"/>
            <field name="domain" eval="[('account_id.user_type.report_type', '=', 'expenses')]" />
            <field name="groupby">account_id</field>
            <field name="sequence" eval="3"/>
        </record>
        <record id="account_financial_report_depreciation0" model="account.financial.report.line">
            <field name="name">Depreciation</field>
            <field name="code">DEP</field>
            <field name="formulas">balance = sum.balance; credit = sum.credit; debit = sum.debit</field>
            <field name="parent_ids" eval="[(6, 0, [ref('account_financial_report_less_expenses0')])]"/>
            <field name="domain" eval="[('account_id.user_type.report_type', '=', 'depreciation')]" />
            <field name="groupby">account_id</field>
            <field name="sequence" eval="3"/>
        </record>
        <record id="account_financial_report_overheads0" model="account.financial.report.line">
            <field name="name">Overheads</field>
            <field name="code">OVH</field>
            <field name="formulas">balance = sum.balance; credit = sum.credit; debit = sum.debit</field>
            <field name="parent_ids" eval="[(6, 0, [ref('account_financial_report_less_expenses0')])]"/>
            <field name="domain" eval="[('account_id.user_type.report_type', '=', 'overheads')]" />
            <field name="groupby">account_id</field>
            <field name="sequence" eval="3"/>
        </record>


        <!-- BALANCE SHEET -->


        <record id="account_financial_report_net_assets0" model="account.financial.report.line">
            <field name="name">NET ASSETS</field>
            <field name="code">NA</field>
            <field name="formulas">balance = TA.balance - L.balance; credit = TA.credit - L.credit; debit = TA.debit - L.debit</field>
            <field name="sequence" eval="4"/>
        </record>
        <record id="account_financial_report_total_assets0" model="account.financial.report.line">
            <field name="name">ASSETS</field>
            <field name="code">TA</field>
            <field name="parent_ids" eval="[(6, 0, [ref('account_financial_report_net_assets0')])]"/>
            <field name="formulas">balance = CA.balance + BA.balance + FA.balance + PNCA.balance; credit = CA.credit + BA.credit + FA.credit + PNCA.credit; debit = CA.debit + BA.debit + FA.debit + PNCA.debit</field>
            <field name="sequence" eval="4"/>
        </record>
        <record id="account_financial_report_current_assets_view0" model="account.financial.report.line">
            <field name="name">Current Assets</field>
            <field name="code">CA</field>
            <field name="parent_ids" eval="[(6, 0, [ref('account_financial_report_total_assets0')])]"/>
            <field name="formulas">balance = CAS.balance + PRE.balance; credit = CAS.credit + PRE.credit; debit = CAS.debit + PRE.debit</field>
            <field name="sequence" eval="4"/>
        </record>
        <record id="account_financial_report_current_assets0" model="account.financial.report.line">
            <field name="name">Current Assets</field>
            <field name="code">CAS</field>
            <field name="parent_ids" eval="[(6, 0, [ref('account_financial_report_current_assets_view0')])]"/>
            <field name="domain" eval="[('account_id.user_type.report_type', '=', 'current_assets')]" />
            <field name="groupby">account_id</field>
            <field name="formulas">balance = sum.balance; credit = sum.credit; debit = sum.debit</field>
            <field name="sequence" eval="5"/>
        </record>
        <record id="account_financial_report_prepayements0" model="account.financial.report.line">
            <field name="name">Prepayments</field>
            <field name="code">PRE</field>
            <field name="parent_ids" eval="[(6, 0, [ref('account_financial_report_current_assets_view0')])]"/>
            <field name="domain" eval="[('account_id.user_type.report_type', '=', 'prepayments')]" />
            <field name="groupby">account_id</field>
            <field name="formulas">balance = sum.balance; credit = sum.credit; debit = sum.debit</field>
            <field name="sequence" eval="5"/>
        </record>
        <record id="account_financial_report_bank_view0" model="account.financial.report.line">
            <field name="name">Plus Bank Accounts</field>
            <field name="code">BA</field>
            <field name="parent_ids" eval="[(6, 0, [ref('account_financial_report_total_assets0')])]"/>
            <field name="domain" eval="[('account_id.user_type.report_type', '=', 'bank_accounts')]" />
            <field name="groupby">account_id</field>
            <field name="formulas">balance = sum.balance; credit = sum.credit; debit = sum.debit</field>
            <field name="sequence" eval="4"/>
        </record>
        <record id="account_financial_report_fixed_assets_view0" model="account.financial.report.line">
            <field name="name">Plus Fixed Assets</field>
            <field name="code">FA</field>
            <field name="parent_ids" eval="[(6, 0, [ref('account_financial_report_total_assets0')])]"/>
            <field name="domain" eval="[('account_id.user_type.report_type', '=', 'fixed_assets')]" />
            <field name="groupby">account_id</field>
            <field name="formulas">balance = sum.balance; credit = sum.credit; debit = sum.debit</field>
            <field name="sequence" eval="4"/>
        </record>
        <record id="account_financial_report_non_current_assets_view0" model="account.financial.report.line">
            <field name="name">Plus Non-current Assets</field>
            <field name="code">PNCA</field>
            <field name="parent_ids" eval="[(6, 0, [ref('account_financial_report_total_assets0')])]"/>
            <field name="domain" eval="[('account_id.user_type.report_type', '=', 'non_current_assets')]" />
            <field name="groupby">account_id</field>
            <field name="formulas">balance = sum.balance; credit = sum.credit; debit = sum.debit</field>
            <field name="sequence" eval="4"/>
        </record>
        <record id="account_financial_report_liabilities_view0" model="account.financial.report.line">
            <field name="name">LIABILITIES</field>
            <field name="code">L</field>
            <field name="parent_ids" eval="[(6, 0, [ref('account_financial_report_net_assets0')])]"/>
            <field name="groupby">account_id</field>
            <field name="formulas">balance = CL.balance + NL.balance; credit = CL.credit + NL.credit; debit = CL.debit + NL.debit</field>
            <field name="sequence" eval="6"/>
        </record>
        <record id="account_financial_report_current_liabilities_view0" model="account.financial.report.line">
            <field name="name">Current Liabilities</field>
            <field name="code">CL</field>
            <field name="parent_ids" eval="[(6, 0, [ref('account_financial_report_liabilities_view0')])]"/>
            <field name="groupby">account_id</field>
            <field name="formulas">balance = CLI.balance; credit = CLI.credit; debit = CLI.debit</field>
            <field name="sequence" eval="6"/>
        </record>
        <record id="account_financial_report_current_liabilities0" model="account.financial.report.line">
            <field name="name">Current Liabilities</field>
            <field name="code">CLI</field>
            <field name="parent_ids" eval="[(6, 0, [ref('account_financial_report_current_liabilities_view0')])]"/>
            <field name="domain" eval="[('account_id.user_type.report_type', '=', 'current_liabilities')]" />
            <field name="groupby">account_id</field>
            <field name="formulas">balance = sum.balance; credit = sum.credit; debit = sum.debit</field>
            <field name="sequence" eval="6"/>
        </record>
        <record id="account_financial_report_non_current_liabilities_view0" model="account.financial.report.line">
            <field name="name">Non-current Liabilities</field>
            <field name="code">NL</field>
            <field name="parent_ids" eval="[(6, 0, [ref('account_financial_report_liabilities_view0')])]"/>
            <field name="groupby">account_id</field>
            <field name="formulas">balance = LIA.balance + NCL.balance; credit = LIA.credit + NCL.credit; debit = LIA.debit + NCL.debit</field>
            <field name="sequence" eval="6"/>
        </record>
        <record id="account_financial_report_liabilities0" model="account.financial.report.line">
            <field name="name">Liabilities</field>
            <field name="code">LIA</field>
            <field name="parent_ids" eval="[(6, 0, [ref('account_financial_report_non_current_liabilities_view0')])]"/>
            <field name="domain" eval="[('account_id.user_type.report_type', '=', 'liabilities')]" />
            <field name="groupby">account_id</field>
            <field name="formulas">balance = sum.balance; credit = sum.credit; debit = sum.debit</field>
            <field name="sequence" eval="6"/>
        </record>
        <record id="account_financial_report_non_current_liabilities0" model="account.financial.report.line">
            <field name="name">Non-current Liabilities</field>
            <field name="code">NCL</field>
            <field name="parent_ids" eval="[(6, 0, [ref('account_financial_report_non_current_liabilities_view0')])]"/>
            <field name="domain" eval="[('account_id.user_type.report_type', '=', 'non_current_liabilities')]" />
            <field name="groupby">account_id</field>
            <field name="formulas">balance = sum.balance; credit = sum.credit; debit = sum.debit</field>
            <field name="sequence" eval="6"/>
        </record>

        <!-- 
            Financial Reports
        -->
        <record id="account_financial_report_profitandloss0" model="account.financial.report">
            <field name="name">Profit and Loss</field>
            <field name="balance" eval="True"/>
            <field name="debit_credit" eval="True"/>
            <field name="line" ref="account_financial_report_net_profit0"/>
        </record>
        <record id="account_financial_report_balancesheet0" model="account.financial.report">
            <field name="name">Balance Sheet</field>
            <field name="balance" eval="True"/>
            <field name="debit_credit" eval="True"/>
            <field name="line" ref="account_financial_report_net_assets0"/>
        </record>
        <record id="account_financial_report_cashsummary0" model="account.financial.report">
            <field name="name">Cash Summary</field>
            <field name="balance" eval="True"/>
            <field name="debit_credit" eval="True"/>
            <field name="line" ref="account_financial_report_cashsummary_line0"/>
            <field name="offset_level" eval="1"/>
        </record>
    </data>
</openerp>
