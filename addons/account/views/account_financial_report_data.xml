<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!--
            Lines
        -->
        <record id="account_financial_report_profitandloss_line0" model="account.financial.report.line">
            <field name="name">Profit and Loss</field>
            <field name="formulas">balance = INC.balance + EXP.balance</field>
        </record>
        <record id="account_financial_report_income0" model="account.financial.report.line">
            <field name="name">Income</field>
            <field name="code">INC</field>
            <field name="formulas">balance = -sum</field>
            <field name="parent_id" ref="account_financial_report_profitandloss_line0"/>
            <field name="domain" eval="[('account_id.user_type.report_type', '=', 'income')]" />
        </record>
        <record id="account_financial_report_expense0" model="account.financial.report.line">
            <field name="name">Expense</field>
            <field name="code">EXP</field>
            <field name="formulas">balance = -sum</field>
            <field name="parent_id" ref="account_financial_report_profitandloss_line0"/>
            <field name="domain" eval="[('account_id.user_type.report_type', '=', 'expense')]" />
        </record>

        <record id="account_financial_report_balancesheet_line0" model="account.financial.report.line">
            <field name="name">Balance Sheet</field>
            <field name="formulas">balance = ASS.balance + LIA.balance</field>
        </record>
        <record id="account_financial_report_assets0" model="account.financial.report.line">
            <field name="name">Assets</field>
            <field name="code">ASS</field>
            <field name="parent_id" ref="account_financial_report_balancesheet_line0"/>
            <field name="domain" eval="[('account_id.user_type.report_type', '=', 'assets')]" />
            <field name="formulas">balance = sum</field>
        </record>
        <record id="account_financial_report_liability0" model="account.financial.report.line">
            <field name="name">Liability</field>
            <field name="code">LIA</field>
            <field name="parent_id" ref="account_financial_report_balancesheet_line0"/>
            <field name="domain" eval="[('account_id.user_type.report_type', '=', 'liability')]" />
            <field name="formulas">balance = sum</field>
        </record>
        <!-- 
            Financial Reports
        -->
        <record id="account_financial_report_profitandloss0" model="account.financial.report">
            <field name="name">Profit and Loss</field>
            <field name="balance" eval="True"/>
            <field name="line" ref="account_financial_report_profitandloss_line0"/>
        </record>
        <record id="account_financial_report_balancesheet0" model="account.financial.report">
            <field name="name">Balance Sheet</field>
            <field name="balance" eval="True"/>
            <field name="line" ref="account_financial_report_balancesheet_line0"/>
        </record>
    </data>
</openerp>

