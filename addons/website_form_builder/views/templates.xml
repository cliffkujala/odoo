<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="website.form_builder_assets_frontend" name="Form Builder Assets Frontend" inherit_id="website.assets_frontend">
			<xpath expr="." position="inside">	
				<link id="jquery_textext_css" rel='stylesheet' href='/web/static/lib/jquery.textext/jquery.textext.css'/>
				<link id="website_form_builder_css" rel='stylesheet' href='/website_form_builder/static/src/css/website.form.builder.css'/>
     			<script type="text/javascript" src="/website_form_builder/static/src/js/website.form.field.animation.js"></script>
     			<script type="text/javascript" src="/web/static/lib/jquery.textext/jquery.textext.js"></script>
			</xpath>
		</template>
		
		<template id="website.form_builder_assets_editor" name="Form Builder Assets Editor" inherit_id="website.assets_editor">
			<xpath expr="." position="inside">	
				<script type="text/javascript" src="/website_form_builder/static/src/js/website.form.field.editor.js"></script>
			</xpath>
		</template>
		
		<template id="xmlresponse" name="XML Response">
			<div id="xmlresponse" t-att-data-json="response"></div>
		</template>

		<template id="form_thankyou" name="Contact us">
		    <t t-call="website.layout">
		      <div id="wrap">
		        <div class="oe_structure"/>
					<div class="container">
						<h1>Thanks!</h1>
						<div class="row">
							<div class="col-md-8">
								<div class="alert alert-success">
									Your message has been sent successfully.
									<button type="button" class="close" data-dismiss="alert">&amp;times;</button>
								</div>
								<p>We will get back to you shortly.</p>
								<p class="mt64">If you have an emergency, do not hesitate to contact us by phone:</p>
								<ul class="list-unstyled">
									<li>
										<i class="fa fa-phone"></i> :
										<span t-field="res_company.phone"/>
									</li>
									<li>
										<i class="fa fa-envelope"></i> :
										<span t-field="res_company.email"/>
									</li>
								</ul>
							</div>
							<div class="col-md-4">
								<t t-call="website.company_description"/>
							</div>
						</div>
					</div>
		        <div class="oe_structure"/>
		      </div>
		    </t>
		</template>
		<template id="form_error" name="Contact us">
			<t t-call="website.layout">
				<div id="wrap">
					<div class="oe_structure"/>
					<div class="container">
						<h1>We are sorry !</h1>
						<div class="row">
							<div class="col-md-8">
								<div class="alert alert-danger">
									Your message has not been sent.
									<button type="button" class="close" data-dismiss="alert">&amp;times;</button>
								</div>
								<p>Please, contact us by mail or by phone :</p>
								<ul class="list-unstyled">
									<li>
										<i class="fa fa-phone"></i> :
										<span t-field="res_company.phone"/>
									</li>
									<li>
										<i class="fa fa-envelope"></i> :
										<span t-field="res_company.email"/>
									</li>
								</ul>
							</div>
							<div class="col-md-4">
								<t t-call="website.company_description"/>
							</div>
						</div>
					</div>
					<div class="oe_structure"/>
				</div>
			</t>
		</template>
	</data>
</openerp>	
