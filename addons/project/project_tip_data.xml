<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="web.tip" id="project_1">
            <field name="title"><![CDATA[<b>Create new tasks</b>]]></field>
            <field name="description">You will arrive on the stages view of your project where you'll be able to manage all your tasks</field>
            <field name="action_id" ref="base.group_user"/> 
            <field name="model">project.project</field>
            <field name="mode">form</field>
            <field name="trigger_selector">.oe_form_buttons_view:visible,div.oe_right.oe_button_box > button</field>
            <field name="highlight_selector">div.oe_right.oe_button_box:visible > button:nth-child(1)</field>
            <field name="placement">bottom</field>
        </record>
        
        <record model="web.tip" id="project_2">
            <field name="title"></field>
            <field name="description"> "Move one of your tasks to the next stage.This allows you to track progress of each task. </field> 
            <field name="model">project.task</field>
            <field name="mode">kanban</field>
            <field name="trigger_selector">.oe_close_quick_box</field>
            <field name="highlight_selector">td.oe_kanban_column:visible</field>
            <field name="placement">top</field>
        </record>
        
        <record model="web.tip" id="project_3">
             <field name="title"></field>
             <field name="description">Return to the tasks pipeline.</field>
             <field name="inherit_id" ref="project.view_task_form2"/>
             <field name="model">project.task</field>
             <field name="mode">form</field>
             <field name="trigger_selector">.oe_form_buttons_view:visible, .oe_breadcrumb_title > a.oe_breadcrumb_item:not(.oe_form_invisible)</field>
             <field name="highlight_selector">.oe_breadcrumb_title > a.oe_breadcrumb_item:last:not(.oe_form_invisible)</field>
             <field name="placement">bottom</field>
         </record>
        
        <record model="web.tip" id="project_4">
            <field name="title"></field>
            <field name="description">Track history and collaborate on tasks. Send a new message to notify followers or log an internal note to keep history but donâ€™t notify followers.</field> 
            <field name="model">project.task</field>
            <field name="mode">form</field>
            <field name="trigger_selector">.oe_form_buttons_view:visible,.field_text</field>
            <field name="highlight_selector">.field_text:visible</field>
            <field name="placement">top</field>
        </record>
    </data>
</openerp>
