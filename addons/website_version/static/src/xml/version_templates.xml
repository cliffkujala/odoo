<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="all_versions">
        <t t-foreach="versions" t-as="item">
            <li class="version_choice" t-att-data-version_id="item.id">
                <a href="#" data-action="delete_version" style="position: absolute; right: 0px;" class="pull-right"><i class="fa fa-trash-o fa-fw"></i></a>
                <t t-if="item.bold == 0 ">
                    <a href="#" data-action="change_version"><t t-esc="item.name"></t> </a>
                </t>
                <t t-if="item.bold == 1 ">
                    <a href="#" data-action="change_version" t-att-data-version_id="item.id"> <b><t t-esc="item.name"></t></b> </a>
                </t>
            </li>
        </t>
    </t>

    <t t-extend="website.editorbar">
        <t t-jquery=".navbar-header form button" t-operation="replace">
            <div class="btn-group">
                <button type="button" data-action="save" class="btn btn-primary btn-xs">Save</button>
                <button type="button" class="btn btn-primary btn-xs dropdown-toggle option_choice" data-toggle="dropdown">
                    <span class="caret"></span>
                    <span class="sr-only">Toggle Dropdown</span>
                </button>
                <ul class="dropdown-menu" role="menu">
                    <li class="first_choice"><a href="#" id="save_as_new_version" data-action="save_as_new_version" 
                        class="btn btn-link btn-xs version">Save as New Version</a>
                    </li>
                    <!-- <li>
                        <a href="#" id="save_and_publish" data-action="save_and_publish" 
                            class="btn btn-link btn-xs version">Save and Publish</a>
                    </li> -->
                </ul>
            </div>
            
        </t>
    </t>

    <t t-name="all_options">    
        <li class="second_choice">
            <a href="#" id="save_and_publish" data-action="save_and_publish" 
                class="btn btn-link btn-xs version"><t t-esc="version"></t></a>
        </li>
    </t>

    <t t-name="experiment_menu">
        <li class="experiment"><a href="#" data-action="manage_experiment">Manage A/B tests</a></li>
        <li class="experiment"><a href="#" data-action="statistics">Statistics</a></li>
    </t>

    <t t-name="website_version.GoogleAccess">
        <div id="CheckGoogleAccess" class="odoo_google_token" >
                <button class="GoogleAccess"> Authorize google </button>
        </div>
    </t>

    <t t-name="website_version.create_experiment">
        <div class="modal fade">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h4 class="modal-title">Launch A/B tests</h4>
              </div>
                <div class="modal-body">
                    <t t-if="versions.length != 0 and config == 1">  
                        <form id="productForm" class="form-horizontal" role="form">              
                            <div class="form-group form-group">
                                <label class="col-sm-3 control-label">Experiment Name</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control form-field-label name " id="required_field"/>
                                </div>

                            </div>

                            <div class="form-group form-group">
                                <label class="col-sm-3 control-label">Objective: </label>
                                <div class="col-sm-8 ">
                                    <select class="form-control col-sm-2 box">
                                        <t t-foreach="goals" t-as="item">
                                            <option t-att-value="item.id"><t t-esc="item.name"></t></option>
                                        </t>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group form-group">
                                <div class="col-sm-3"></div>
                                <div class="checkbox col-sm-8">
                                    <label>
                                        <input type="checkbox" checked="checked" disabled="disabled"/> Master
                                    </label>
                                </div>
                            </div>
                            
                            <div class="versions">
                                <t t-foreach="versions" t-as="item">  
                                    <div class="form-group form-group-lg"> 
                                        <div class="col-sm-3"></div>    
                                        <div class="checkbox col-sm-8">
                                            <label>
                                                <input type="checkbox" class="version" t-att-data-version_id="item.id"/> <t t-esc="item.name"></t> 
                                            </label>
                                        </div>
                                    </div>
                                </t>
                            </div>
                        </form>
                    </t>
                    <t t-if="versions.length == 0 and config == 1">
                        <div>
                            <p>You must have at least one version for this page to create a new experiment.</p>
                        </div>
                    </t>

                    <t t-if= "config == 0">
                        <form id="productForm" class="form-horizontal" role="form">              
                            <div class="form-group form-group">
                                <label class="col-sm-3 control-label">GA Key</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control form-field-label ga_key" id="required_field"/>
                                </div>
                            </div>
                            <div class="form-group form-group">
                                <label class="col-sm-3 control-label">View ID</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control form-field-label view_id " id="required_field"/>
                                </div>
                            </div>
                            <div class="form-group form-group">
                                <label class="col-sm-3 control-label">Client ID</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control form-field-label client_id " id="required_field"/>
                                </div>
                            </div>
                            <div class="form-group form-group">
                                <label class="col-sm-3 control-label">Client Secret</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control form-field-label client_secret " id="required_field"/>
                                </div>
                            </div>
                        </form>
                        <div class="configure_ab">
                            <p>You must configure your account.</p>
                        </div>
                    </t>

                </div>
              <div class="modal-footer">
                <t t-if="versions.length != 0 and config == 1"> 
                    <div class="btn-group">
                        <button type="button" class="btn btn-primary launch">Launch</button>
                    </div>
                </t>
                <t t-if= "config == 0">
                    <div class="btn-group">
                        <button type="button" class="btn btn-primary validate">Validate</button>
                        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                                <span class="caret"></span>
                                <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#" class="btn btn-link btn-xs configure">Configure</a></li>
                        </ul>
                    </div>
                </t>
                <a href="#" class="btn btn-link btn-xs" data-dismiss="modal">Cancel</a>
              </div>
            </div><!-- /.modal-content -->
          </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->
    </t>
    <t t-name="website_version.message">
        <div class="modal fade">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h4 class="modal-title"><t t-esc="message"></t></h4>
              </div>  
              <div class="modal-footer">
                <button type="button" class="btn btn-primary confirm" data-dismiss="modal">Ok</button>
              </div>
            </div><!-- /.modal-content -->
          </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->
    </t>
    <t t-name="website_version.delete_message">
        <div class="modal fade">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h4 class="modal-title"><t t-esc="message"></t></h4>
              </div>  
              <div class="modal-footer">
                <button type="button" class="btn btn-primary confirm" data-dismiss="modal">Delete Version</button>
                <a href="#" class="btn btn-link btn-xs cancel" data-dismiss="modal">Cancel</a>
              </div>
            </div><!-- /.modal-content -->
          </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->
    </t>
    <t t-name="website_version.publish_message">
        <div class="modal fade">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h4 class="modal-title"><t t-esc="message"></t></h4>
              </div>  
              <div class="modal-footer">
                <button type="button" class="btn btn-primary confirm" data-dismiss="modal">Publish</button>
                <button type="button" class="btn btn-primary save" data-dismiss="modal">Publish and Save</button>
                <a href="#" class="btn btn-link btn-xs" data-dismiss="modal">Cancel</a>
              </div>
            </div><!-- /.modal-content -->
          </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->
    </t> 
</templates>