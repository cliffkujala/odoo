<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">

        <record id="payment_acquirer_transfer_provider" model="payment.acquirer.provider">
            <field name="name">Transfer</field>
            <field name="test_url">/payment/Transfer/return</field>
        </record>

        <record id="payment_acquirer_transfer" model="payment.acquirer">
            <field name="name">Wire Transfer</field>
            <field name="provider_id" ref="payment_acquirer_transfer_provider"/>
            <field name="company_id" ref="base.main_company"/>
            <field name="view_template_id" ref="transfer_acquirer_button"/>
            <field name="validation">manual</field>
            <field name="environment">test</field>
            <field name="website_published" eval="True"/>
            <field name="pre_msg"><![CDATA[
<p>Transfer information will be provided after choosing the payment mode.</p>]]>
            </field>
        </record>

        <!--     Invalid Parametr Mapping    -->
        <record id="payment_acquirer_transaction_mapping_transfer1" model="payment.transaction.mapping">
            <field name="odoo_key">tx.amount</field>
            <field name="provider_key">float(data.get('amount', '0.0'))</field>
            <field name="type">check_field</field>
            <field name="provider_id" ref="payment_acquirer_transfer_provider"/>
        </record>
        <record id="payment_acquirer_transaction_mapping_transfer2" model="payment.transaction.mapping">
            <field name="odoo_key">tx.currency_id.name</field>
            <field name="provider_key">data.get('currency')</field>
            <field name="type">check_field</field>
            <field name="provider_id" ref="payment_acquirer_transfer_provider"/>
        </record>

        <!--     Error Code Mapping   -->
        <record id="payment_acquirer_transaction_mapping_transfer3" model="payment.transaction.mapping">
            <field name="odoo_key">pending</field>
            <field name="provider_key">['pending']</field>
            <field name="type">error_code</field>
            <field name="provider_id" ref="payment_acquirer_transfer_provider"/>
        </record>

        <!--     required Value Mapping   -->
        <record id="payment_acquirer_transaction_mapping_transfer4" model="payment.transaction.mapping">
            <field name="odoo_key">reference</field>
            <field name="provider_key">data.get('reference')</field>
            <field name="type">value</field>
            <field name="provider_id" ref="payment_acquirer_transfer_provider"/>
        </record>
        <record id="payment_acquirer_transaction_mapping_transfer5" model="payment.transaction.mapping">
            <field name="odoo_key">amount</field>
            <field name="provider_key">data.get('amount')</field>
            <field name="type">value</field>
            <field name="provider_id" ref="payment_acquirer_transfer_provider"/>
        </record>
        <record id="payment_acquirer_transaction_mapping_transfer6" model="payment.transaction.mapping">
            <field name="odoo_key">currency_name</field>
            <field name="provider_key">data.get('currency')</field>
            <field name="type">value</field>
            <field name="provider_id" ref="payment_acquirer_transfer_provider"/>
        </record>

         <!--        Write Value         -->
        <record id="payment_acquirer_transaction_mapping_transfer7" model="payment.transaction.mapping">
            <field name="odoo_key">state</field>
            <field name="provider_key">'pending'</field>
            <field name="type">write_field</field>
            <field name="provider_id" ref="payment_acquirer_transfer_provider"/>
        </record>
    </data>
</openerp>
