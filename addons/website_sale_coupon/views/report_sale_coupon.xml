<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_sales_coupon" inherit_id="sale.report_saleorder_document">
            <xpath expr="//p[@t-field='o.note']" position="before">
                <t t-if="o.has_coupon">
                    <p><b> Coupon <t t-esc="coupan_report"/></b></p>
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Coupon Code</th>
                                <th>Expiration Date</th>
                                <th>Expiration Use</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.order_line" t-as="l">
                                <t t-if="not l.is_coupon and l.coupon_id">
                                    <td>
                                       <span t-field="l.coupon_id.product_id"/>
                                    </td>
                                    <td>
                                       <span t-field="l.coupon_id.code"/>
                                    </td>
                                    <td>
                                       <span t-field="l.coupon_id.expiration_date"/>
                                   </td>
                                   <td>
                                        <span t-field="l.coupon_id.expiration_use"/> uses
                                    </td>
                                </t>
                            </tr>
                        </tbody>
                    </table>
                </t>
            </xpath>
        </template>
    </data>
</openerp>
